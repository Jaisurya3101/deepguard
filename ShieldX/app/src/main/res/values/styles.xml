<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Primary Button Style -->
    <style name="Widget.ShieldX.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/shield_primary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="Widget.ShieldX.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/shield_primary</item>
        <item name="android:textColor">@color/shield_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Success Button Style -->
    <style name="Widget.ShieldX.Button.Success" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/success_color</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Danger Button Style -->
    <style name="Widget.ShieldX.Button.Danger" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/danger_color</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Card Title Text Style -->
    <style name="TextAppearance.ShieldX.CardTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <!-- Card Subtitle Text Style -->
    <style name="TextAppearance.ShieldX.CardSubtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <!-- Statistics Text Style -->
    <style name="TextAppearance.ShieldX.Statistics" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/shield_primary</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>