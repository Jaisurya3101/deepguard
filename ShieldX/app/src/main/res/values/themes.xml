<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ShieldX" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/shield_primary</item>
        <item name="colorPrimaryVariant">@color/shield_primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/shield_secondary</item>
        <item name="colorSecondaryVariant">@color/success_color</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/danger_color</item>
        <item name="colorOnError">@color/text_on_primary</item>
        
        <!-- Legacy support -->
        <item name="colorAccent">@color/shield_secondary</item>
        <item name="colorPrimaryDark">@color/shield_primary_variant</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/shield_primary_variant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>